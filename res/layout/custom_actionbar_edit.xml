<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lnrToolBar"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignBaseline="@+id/imgContact"
    android:layout_marginTop="5dp"
    android:background="#00000000"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <ImageButton
        android:id="@+id/btnImgBackActionBarEdit"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:background="@null"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/icarrowbackwhite24dp" />

    <ImageButton
        android:id="@+id/btnImgSaveActionBarEdit"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/save24" />

</RelativeLayout>